# Backend Environment Variables
# Переменные окружения для бэкенда

# Server Configuration / Конфигурация сервера
PORT=3000

# Email Configuration / Конфигурация email
# For Gmail, you need to create an App Password:
# https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Admin email to receive notifications / Email администратора для получения уведомлений
ADMIN_EMAIL=admin@japanschool.com

# Admin Panel Authentication / Аутентификация админ-панели
# REQUIRED for production! / ОБЯЗАТЕЛЬНО для продакшена!
ADMIN_USER=admin
ADMIN_PASS=your-secure-password-here

# CORS Allowed Origins (comma-separated) / Разрешенные CORS источники
# Example: https://japanschool.ru,https://www.japanschool.ru
ALLOWED_ORIGINS=http://localhost:4321,http://localhost:3000

# Rate Limiting / Ограничение запросов
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=20
MAX_MESSAGE_LENGTH=1000
