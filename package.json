{
  "name": "japanschool-landing",
  "version": "1.0.0",
  "description": "Professional landing page for Japanese language school with modular architecture, bilingual comments (EN/RU), and PWA support. Features: 27 ES6 modules, 6 themes, adaptive images (AVIF/WebP/JPG), static blog, canvas animations, offline-first.",
  "type": "module",
  "keywords": [
    "japanese-language",
    "landing-page",
    "modular-architecture",
    "pwa",
    "bilingual",
    "responsive-images",
    "static-site",
    "esbuild",
    "postcss",
    "canvas-animations",
    "sakura"
  ],
  "author": {
    "name": "Eduard Bosak",
    "url": "https://github.com/Eduard-Bosak"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Eduard-Bosak/japanschool.git"
  },
  "bugs": {
    "url": "https://github.com/Eduard-Bosak/japanschool/issues"
  },
  "homepage": "https://github.com/Eduard-Bosak/japanschool#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "clean": "node build.mjs --clean",
    "build": "cross-env NODE_ENV=production node build.mjs",
    "watch": "node build.mjs --watch",
    "serve": "npx http-server dist -p 5173 -c-1",
    "dev": "npm run build && npm-run-all --parallel watch serve",
    "lint": "eslint src/**/*.js build.mjs og.js",
    "lint:fix": "eslint src/**/*.js build.mjs og.js --fix",
    "format": "prettier --write \"**/*.{js,json,css,md,html}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,md,html}\"",
    "lighthouse": "npm run build && lhci autorun",
    "lighthouse:open": "npm run build && lhci autorun && open .lighthouseci/lhr-*.html"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "cssnano": "^7.1.1",
    "esbuild": "^0.25.10",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.1",
    "prettier": "^3.3.3",
    "sharp": "^0.34.4"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "marked": "^16.4.0"
  }
}
