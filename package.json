{
  "name": "japanschool-landing",
  "version": "1.0.0",
  "description": "Landing page for Japanese language school (build pipeline + dynamic OG generation).",
  "type": "module",
  "scripts": {
    "clean": "node build.mjs --clean",
    "build": "cross-env NODE_ENV=production node build.mjs",
    "watch": "node build.mjs --watch",
    "serve": "npx http-server dist -p 5173 -c-1",
    "dev": "npm run build && npm-run-all --parallel watch serve"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "cssnano": "^6.1.2",
    "esbuild": "^0.23.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "sharp": "^0.33.4"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "marked": "^12.0.2"
  }
}
