{
  "name": "japanschool-landing",
  "version": "1.0.0",
  "description": "Professional landing page for Japanese language school with modular architecture, bilingual comments (EN/RU), and PWA support. Features: 27 ES6 modules, 6 themes, adaptive images (AVIF/WebP/JPG), static blog, canvas animations, offline-first.",
  "type": "module",
  "keywords": [
    "japanese-language",
    "landing-page",
    "modular-architecture",
    "pwa",
    "bilingual",
    "responsive-images",
    "static-site",
    "esbuild",
    "postcss",
    "canvas-animations",
    "sakura"
  ],
  "author": {
    "name": "Eduard Bosak",
    "url": "https://github.com/Eduard-Bosak"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Eduard-Bosak/japanschool.git"
  },
  "bugs": {
    "url": "https://github.com/Eduard-Bosak/japanschool/issues"
  },
  "homepage": "https://github.com/Eduard-Bosak/japanschool#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "prepare": "husky",
    "clean": "node build.mjs --clean",
    "build": "cross-env NODE_ENV=production node build.mjs",
    "watch": "node build.mjs --watch",
    "serve": "node serve.mjs",
    "serve:silent": "node serve.mjs --silent",
    "dev": "npm run build && npm-run-all --parallel watch serve",
    "dev:stable": "npm run build && npm-run-all --parallel watch serve:silent",
    "dev:astro": "astro dev",
    "preview": "node serve.mjs --silent",
    "preview:astro": "astro preview",
    "preview:smoke": "node scripts/preview-smoke.mjs",
    "build:fast": "cross-env NODE_ENV=development node build.mjs",
    "build:astro": "astro build",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.3.1",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-footnotes": "^4.0.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.10",
    "@astrojs/sitemap": "^3.2.1",
    "astro": "^5.0.0-beta.4",
    "canvas-confetti": "^1.9.3",
    "photoswipe": "^5.4.4"
  }
}
