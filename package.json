{
  "name": "japanschool-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Japanese language school project",
  "type": "module",
  "author": {
    "name": "Eduard Bosak",
    "url": "https://github.com/Eduard-Bosak"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Eduard-Bosak/japanschool.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm --parallel --filter @japanschool/web --filter @japanschool/portal dev",
    "dev:web": "pnpm --filter @japanschool/web dev",
    "dev:server": "pnpm --filter @japanschool/server dev",
    "dev:portal": "pnpm --filter @japanschool/portal dev",
    "dev:all": "pnpm --parallel -r --filter \"./apps/*\" dev",
    "build": "pnpm --filter @japanschool/web build",
    "build:portal": "pnpm --filter @japanschool/portal build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "pnpm --filter @japanschool/web test",
    "e2e": "pnpm --filter @japanschool/web e2e",
    "prepare": "husky"
  },
  "devDependencies": {
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.3",
    "prettier-plugin-astro": "^0.14.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.{json,md,astro}": [
      "prettier --write"
    ]
  }
}
