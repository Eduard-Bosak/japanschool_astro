# Backend Environment Variables
# Переменные окружения для бэкенда

# Server Configuration / Конфигурация сервера
PORT=3000

# Email Configuration / Конфигурация email
# For Gmail, you need to create an App Password:
# https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Admin email to receive notifications / Email администратора для получения уведомлений
ADMIN_EMAIL=admin@japanschool.com

# CORS Origin (your frontend URL) / CORS Origin (URL вашего фронтенда)
FRONTEND_URL=http://localhost:5173
